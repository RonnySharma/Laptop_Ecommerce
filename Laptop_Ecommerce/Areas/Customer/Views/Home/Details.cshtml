@model Laptop_Ecommerce.Models.ShoppingCart

<form method="post">
    <input type="hidden" asp-for="@Model.LaptopId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary" @Model.Laptop.ModelName</h1>
                    <p class="text-warning">by @Model.Laptop.LaptopCompany.Name</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="text-warning badge badge-success pt-2" style="height:30px;">@Model.Laptop.Processor.Name</span>
                    <span class="text-warning badge badge-warning pt-2" style="height:30px;">@Model.Laptop.GraphicsCard.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Operating System : @Model.Laptop.OperatingSystem</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">List Price: <strike>₹ @Model.Laptop.ListPrice</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>1-5</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>5-10</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>20+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price ₹</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>₹ @Model.Laptop.Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>₹ @Model.Laptop.Price10</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>₹ @Model.Laptop.ListPrice20</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Laptop.Description)</p>
                            </div>
                            <div class="row pl-2">
                                @if (Model.Laptop.Quantity != 0)
                                {
                                    <div class="col-4 text-primary"><h4>Quantity Available:@Model.Laptop.Quantity</h4></div>
                                    <div class="col-8"><input class="form-control" asp-for="@Model.Count" min="1" max="@Model.Laptop.Quantity" /></div>
                                }
                                else
                                {
                                    <div class="col-4 text-warning"><h4>Out Of Stock!!!</h4></div>
                                }
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Laptop.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-info form-control  btn-square btn-lg" style="height:50px;">
                            <i class="fas fa-list"></i>
                            Back to List
                        </a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        @if (Model.Laptop.Quantity != 0)
                        {
                            <button type="submit" value="Add to Cart" class="btn btn-success btn-square btn-lg form-control" style="height:50px;">
                                <i class="fas fa-shopping-cart"></i>
                                Add to Cart
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>