@model IEnumerable<Laptop_Ecommerce.Models.Laptop>
@{
    ViewData["Title"] = "Laptops";
}
@if (Model.Count() == 0)
{
    //Slider
    <body>
        <div class="slider-container">
            <div class="slider">
                <img class="slider-image active" src="~/images/slides/slide1.png" alt="Image 1">
                <img class="slider-image" src="~/images/slides/slider2.jpg" alt="Image 2">
                <img class="slider-image" src="~/images/slides/slide3.png" alt="Image 3">
                <img class="slider-image" src="~/images/slides/slide2.png" alt="Image 4">
            </div>
        </div>
    </body>
    //******
    <div class="offset-9 p-1">
        <a asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    </div>
    <div class="text-center">
        <img src="~/images/noResult.png" />
    </div>
}
else
{
    //Slider
    <body>
        <div class="slider-container">
            <div class="slider">
                <img class="slider-image active" src="~/images/slides/slide1.png" alt="Image 1">
                <img class="slider-image" src="~/images/slides/slider2.jpg" alt="Image 2">
                <img class="slider-image" src="~/images/slides/slide3.png" alt="Image 3">
                <img class="slider-image" src="~/images/slides/slide2.png" alt="Image 4">
            </div>
        </div>
    </body>
    //******
    <div class="row p-2 bg-info rounded">
        <div class="col-6">
        <a asp-action="Trending" class="btn btn-warning form-control"><i class="fas fa-fire"></i>&nbsp; Most Selling Laptops</a>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-primary form-control"><i class="fas fa-laptop"></i>&nbsp; All Laptops</a>
        </div>
    </div>
    <div class="row bg-info rounded">
        @foreach (var laptop in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@laptop.ImageUrl" class="card-img-top rounded" width="200" height="200" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@laptop.ModelName</b></p>
                                @*<p class="card-title text-primary">by <b>@laptop.Laptop.LaptopCompany.Name</b></p>*@
                            </div>
                            <div style="padding-left:5px;">
                                <p>List Price: <strike><b class="">@laptop.ListPrice.ToString("C")</b></strike></p>
                               
                            </div>
                            @if (laptop.Quantity == 0)
                            {
                                <div style="padding-left:5px;">
                                <p class="text-warning">Out Of Stock!!! <strike><b class=""></b></strike></p>
                                </div>
                            }
                            else
                            {
                                <div style="padding-left:5px;">
                                    <p style="color:maroon">As low as: <b class="">@laptop.Price.ToString("C")</b></p>
                                </div>
                            }
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@laptop.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
<style>
    /* Slider container */
    .slider-container {
        width: 100%;
        height: 300px;
        overflow: hidden;
        position: relative;
    }

    /* Slider images */
    .slider-image {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

        /* Show active image */
        .slider-image.active {
            opacity: 1;
        }
</style>
<script>
    var images = document.querySelectorAll('.slider-image');
    var currentImageIndex = 0;

    function showNextImage() {
        // Hide current image
        images[currentImageIndex].classList.remove('active');

        // Increment current image index
        currentImageIndex = (currentImageIndex + 1) % images.length;

        // Show next image
        images[currentImageIndex].classList.add('active');
    }

    // Set interval to change image every 3 seconds
    setInterval(showNextImage, 3000);
</script>