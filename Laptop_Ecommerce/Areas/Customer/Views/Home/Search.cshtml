@model IEnumerable<Laptop_Ecommerce.Models.Laptop>

@{
    ViewData["Title"] = "Search";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var laptop in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@laptop.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@laptop.ModelName</b></p>
                            <p class="card-title text-primary">by <b>@laptop.LaptopCompany.Name</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">@laptop.ListPrice.ToString("C")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">@laptop.Price.ToString("C")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@laptop.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>