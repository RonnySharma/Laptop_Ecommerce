@model IEnumerable<Project_Ecomm_Models.OrderHeader>
    <div class="col-1">       
        <div class="nav-brend dropdown">
            <a class="nav-link dropdown-toggle text-success" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Orders By Status</a>
            <div class="dropdown-menu">
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="Index">All Orders</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusApproved">Approved Order</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusPending">Pending Order</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusCancelled">Cancelled Order</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusRefunded">Refunded Order</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusProcessing">Processing Order</a>
                <a class="dropdown-item text-center" asp-area="Admin" asp-controller="Order" asp-action="StatusShipped">Shipped Order</a>
            </div>
        </div>
    </div>
<div class="border container p-2 m-2">
    <table id="tblData" class="table table-striped table-bordered table-hover table-responsive active">
        <thead>
            <tr>
                <th class=" text-center text-primary">Customer Name</th>
                <th class=" text-center text-primary">Payment Status</th>
                <th class=" text-center text-primary">Total Amount</th>
                <th class=" text-center text-primary">Order Status</th>
                <th class=" text-center text-primary">Date Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.PaymentStatus</td>
                    <td class="text-center">@item.OrderTotal</td>
                    <td class="text-center">@item.OrderStatus</td>
                    <td class="text-center">@item.OrderDate</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="text-center text-danger"> No Order Record Found!!!</p>
</div>
