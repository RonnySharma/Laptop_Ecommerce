        <input type="date" name="dateTime1" />
        <input type="date" name="dateTime2" />
        <button class=" btn btn-secondary my-2 my-sm-0 text-success" type="submit">Search</button>
    </form>
</div>
<div class="border container p-2 m-2">
    <table id="tblData" class="table table-striped table-bordered table-hover table-responsive active">
        <thead>
            <tr>
                <th class=" text-center text-primary">Customer Name</th>
                <th class=" text-center text-primary">Payment Status</th>
                <th class=" text-center text-primary">Total Amount</th>
                <th class=" text-center text-primary">Order Status</th>
                <th class=" text-center text-primary">Date Time</th>
                <th class=" text-center text-primary">All Details</th>
            </tr>
        </thead>
