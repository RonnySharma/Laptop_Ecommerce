@model Project_Ecomm_Models.Company
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "EditCompany" : "NewCompany";
    <i class="fas fa-fire text-primary"></i>

}
<form method="post">
    <div class="row border">
        <div class="col-12">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="btn btn-danger"></div>
        <div class="col-8 border rounded p-2 m-2">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-map text-primary"></i>
                    <label asp-for="Name"></label>
                </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                </div>             
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-life-ring text-primary"></i>
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-road text-primary"></i>
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-tree text-primary"></i>
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-ticket-alt text-primary"></i>
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-phone text-primary"></i>
                    <label asp-for="phoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="phoneNumber" class="form-control" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <i class="fas fa-rocket text-primary"></i>
                    <label asp-for="IsAuthorizedCompany"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsAuthorizedCompany"/>
                    <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if(Model.Id==0)
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_EditAndBackToListButton"/>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}