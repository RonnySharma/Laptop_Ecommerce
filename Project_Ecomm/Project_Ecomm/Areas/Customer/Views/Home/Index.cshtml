@model IEnumerable<Project_Ecomm_Models.Product>
<div class="row">
    @foreach (var Product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@Product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50"></b>@Product.Title</p>
                            <p class="card-title text-primary">by <b>@Product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class=""></b>@Product.ListPrice.ToString("0.00")</strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class=""></b>@Product.Price100.ToString("0.00")</p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@Product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>